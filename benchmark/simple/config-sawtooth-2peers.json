{
  "blockchain": {
    "type": "sawtooth",
    "config": "benchmark/simple/sawtooth-2peers.json"
  },
  "command" : {
    "start": "docker-compose -f network/sawtooth/simplenetwork/sawtooth-default-validators-simple.yaml up -d",
    "end" : "docker-compose -f network/sawtooth/simplenetwork/sawtooth-default-validators-simple.yaml down;docker rm $(docker ps -aq);docker rmi $(docker images dev* -q)"
  },
  "test": {
    "name": "simple",
    "description" : "This is an example benchmark for caliper, to test the backend DLT's performance with simple account opening & querying transactions",
    "clients": {
      "type": "local",
      "number": 50
    },
    "rounds": [{
        "label" : "open",
        "txNumber" : [5000, 5000, 5000, 5000, 5000, 5000, 5000, 5000, 5000, 5000],
        "rateControl" : [
          {"type": "fixed-rate", "opts": {"tps" : 100}},  
          {"type": "fixed-rate", "opts": {"tps" : 100}},  
          {"type": "fixed-rate", "opts": {"tps" : 100}},  
          {"type": "fixed-rate", "opts": {"tps" : 100}},  
          {"type": "fixed-rate", "opts": {"tps" : 100}},  
          {"type": "fixed-rate", "opts": {"tps" : 100}},  
          {"type": "fixed-rate", "opts": {"tps" : 100}},  
          {"type": "fixed-rate", "opts": {"tps" : 100}},  
          {"type": "fixed-rate", "opts": {"tps" : 100}}, 
          {"type": "fixed-rate", "opts": {"tps" : 100}}],
        "arguments": { "money": 100000, "txnPerBatch":20},
        "callback" : "benchmark/simple/open.js"
      }]
  },
  "monitor": {
    "type": ["docker", "process"],
    "docker":{
      "name": ["all"]
    },
    "process": [
      {
        "command" : "node",
        "arguments" : "local-client.js",
        "multiOutput" : "avg"
      }
    ],
    "interval": 1
  }
}